{
  "buildCommand": "pnpm build && cp dist/public/_redirects dist/public/ || true",
  "outputDirectory": "./dist/public",
  "installCommand": "pnpm install",
  "framework": "vite",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
